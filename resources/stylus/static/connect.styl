body, html
    font-family: 'Roboto', sans-serif;
    font-size 14px
    margin 0
    padding 0

body
    background-color #f9f9f9

label
    display block

.transition
    -webkit-transition all 0.3s ease
    transition all 0.3s ease

.mtop16
    margin-top 16px !important

.shadow
    -webkit-box-shadow 1px 7px 16px 1px rgba(0, 0, 0, 0.12)
    -moz-box-shadow 1px 7px 16px 1px rgba(0, 0, 0, 0.12)
    box-shadow 1px 7px 16px 1px rgba(0, 0, 0, 0.12)

.page
    align-items center
    display flex
    height 100vh
    width 100vw
    box-sizing border-box
    justify-content center
    //Fondo degradado
    background: linear-gradient(270deg, #00b2ee, #0088b6, #58c5ea);
    background-size: 600% 600%;

    -webkit-animation: AnimationName 40s ease infinite;
    -moz-animation: AnimationName 40s ease infinite;
    animation: AnimationName 40s ease infinite;

    .box
        background-color #fff
        //border-bottom 4px solid #00b2ee
        border-radius 16px
        padding 32px
        width 480px

        .logo
            display block
            width 100%

            img
                display block
                margin 0 auto
                width 50%

        h2.title
            color #2c2c2c
            display block
            font-weight 500
            margin 0
            padding 0
            text-align center
            font-size 2em
            margin-top 16px

        .form
            .actions
                display block
                overflow hidden
                margin-top 6px
                width 100%
                a
                    color #00b2ee
                    display inline-block
                    float right
                    padding 4px
                    text-decoration none
                    &:hover
                        color #0088b6

            .group
                position relative
                width 100%
                margin-top 4px
                //margin-bottom 16px

                input
                    border 1px solid #cccccc
                    border-radius 4px
                    box-sizing border-box
                    display block
                    width 100%
                    padding 14px
                    padding-left 48px

                    &:focus
                        outline none
                        border 1px solid #00b2ee

                i
                    position absolute
                    color #2c2c2c
                    font-size 1.4em
                    top 13px
                    left 18px
                    z-index 1

            .btn
                display block
                cursor pointer
                width 100%
                font-weight 600
                font-size 1.2em
                border 1px solid #00b2ee
                padding 12px
                color #fff
                background-color #00b2ee
                border-radius 4px

                &:hover
                    background-color #f7cd4c
                    border 1px solid #f7cd4c
                    color #222

.page_app
    background-color #fff

    .box
        background-color transparent !important
        border-bottom 0 !important
        width 100% !important

        .logo
            img
                width 60%

    h2.title
        color #fff !important

    label
        color #fff !important


    .form
        .actions
            a
                color #fff !important

        .group
            input
                border 0 !important

                &:focus
                    border 0 !important

            i
                top 11px !important
                left 16px !important

        .btn
            background-color #f7cd4c !important
            color #222 !important
            border 0 !important

@-webkit-keyframes AnimationName {
    0% {
        background-position: 0 50%
    }
    50% {
        background-position: 100% 50%
    }
    100% {
        background-position: 0 50%
    }
}

@-moz-keyframes AnimationName {
    0% {
        background-position: 0 50%
    }
    50% {
        background-position: 100% 50%
    }
    100% {
        background-position: 0 50%
    }
}

@keyframes AnimationName {
    0% {
        background-position: 0 50%
    }
    50% {
        background-position: 100% 50%
    }
    100% {
        background-position: 0 50%
    }
}

.loader_action
    align-items center
    justify-content center
    background-color rgba(0, 0, 0, .5)
    display none
    height 100vh
    width 100%
    position fixed
    z-index 999

    .action
        align-items center
        justify-content center
        display flex
        background-color #fff
        border-radius 8px
        box-sizing border-box
        padding 16px
        overflow hidden
        width 330px

        .col
            display block
            flex initial
            color #333
            float left

            &:first-child
                width 40px

                img
                    display block
                    width 100%

            &:last-child
                margin-left 5%
                position relative
                width calc(95% - 40px)

.loader_action_animation_show
    animation-timing-function ease-in-out
    animation action_show 0.3s forwards

.loader_action_animation_hide
    animation-timing-function ease-in-out
    animation action_hide 0.3s forwards

@keyframes action_show {
    0% {
        opacity: 0
    }
    100% {
        opacity: 1
    }
}

@keyframes action_hide {
    0% {
        opacity: 1
    }
    100% {
        opacity: 0
    }
}
